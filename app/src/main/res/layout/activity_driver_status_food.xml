<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_bg_light"
    tools:context=".ui.order.food.DriverStatusFoodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_delivery_box"
            app:tint="@color/docar_green"
            android:contentDescription="Delivery Icon"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan sedang disiapkan!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/neutral_text_dark"
            android:layout_marginBottom="16dp"/>

        <ProgressBar
            android:id="@+id/driver_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/docar_green"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kami akan mengirimkan notifikasi saat driver sudah di perjalanan."
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/neutral_text_dark"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>