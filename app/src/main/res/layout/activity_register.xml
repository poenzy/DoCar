<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/neutral_bg_light"
    tools:context="com.uas.docar.ui.auth.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="32dp"
                android:paddingVertical="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daftar Akun Baru"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_text_dark"
                    android:layout_marginBottom="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama lengkap"
                    android:textColor="@color/neutral_text_dark"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_nama_lengkap"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Masukkan nama lengkap Anda"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/border_input"
                    android:layout_marginBottom="16dp"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email atau Nomor HP"
                    android:textColor="@color/neutral_text_dark"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_email_hp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="email atau no hp Anda"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/border_input"
                    android:layout_marginBottom="16dp"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/neutral_text_dark"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Buat kata sandi baru"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/border_input"
                    android:layout_marginBottom="16dp"
                    android:inputType="textPassword" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Konfirmasi Password"
                    android:textColor="@color/neutral_text_dark"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/et_konfirmasi_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Ulangi kata sandi"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/border_input"
                    android:layout_marginBottom="24dp"
                    android:inputType="textPassword" />

                <CheckBox
                    android:id="@+id/cb_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saya bersedia menerima update informasi dari DoCar.id"
                    android:textSize="12sp"
                    android:textColor="@color/neutral_text_dark"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/btn_daftar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Daftar Sekarang"
                    android:backgroundTint="@color/docar_green"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:cornerRadius="28dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>