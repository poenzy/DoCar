<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_bg_light"
    tools:context="com.uas.docar.ui.order.ride.OrderFinishedActivity">

    <TextView
        android:id="@+id/tv_selesai"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/splash_circle"
        android:backgroundTint="@color/white"
        android:text="Selesai"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/docar_green"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/summary_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_selesai">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jl. Cihuy, RT.43/RW82, Segulung..."
                android:textColor="@color/neutral_text_dark"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Jarak\n0.5 Km"
                    android:textColor="@color/neutral_text_dark"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu tempuh\n7 Menit"
                    android:textColor="@color/neutral_text_dark"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_final_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 7.500,-"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/docar_green"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_ke_beranda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ke beranda"
            android:backgroundTint="@color/white"
            android:textColor="@color/neutral_text_dark"
            android:textStyle="bold"
            app:strokeWidth="1dp"
            app:strokeColor="@color/neutral_text_dark"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="28dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_beri_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Beri Rating"
            android:backgroundTint="@color/neutral_text_dark"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>