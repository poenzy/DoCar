<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_bg_light"
    tools:context="com.uas.docar.ui.order.ride.OrderConfirmationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="-40dp"
            android:contentDescription="Map Placeholder"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_map" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasimu"
                    android:textStyle="bold"
                    android:textColor="@color/docar_green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Cihuy, RT.43/RW82, Segulung..."
                    android:textColor="@color/neutral_text_dark"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Jarak: 0.5 Km | Waktu: 7 Menit"
                    android:textColor="@color/neutral_text_dark"/>
                <TextView
                    android:id="@+id/tv_base_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 350.000,-"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/docar_green"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pilih kendaraan"
            android:textStyle="bold"
            android:textColor="@color/neutral_text_dark"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rg_kendaraan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/neutral_divider">
                <RadioButton
                    android:id="@+id/rb_motor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="montor\nRp 7.500"
                    android:checked="true"
                    android:padding="16dp"
                    android:textColor="@color/neutral_text_dark"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/neutral_divider">
                <RadioButton
                    android:id="@+id/rb_mobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mobil\nRp 60.500"
                    android:padding="16dp"
                    android:textColor="@color/neutral_text_dark"/>
            </com.google.android.material.card.MaterialCardView>
        </RadioGroup>
    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_cari_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mencari driver"
        android:backgroundTint="@color/docar_green"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:cornerRadius="28dp"
        android:paddingVertical="12dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>